package com.tcs.constructor.day2;

class Employee
{
	int id;
	String name;
	
	
	 Employee(int i,String n)
	{
		System.out.println("employee constrcutor");
	}
	 
	 
	
	void display()
	{
		System.out.println("this is display function");
		System.out.println("id :"+ id);
		System.out.println("name :"+ name);
	}
}



public class DefaultConstructor1 {

	public static void main(String[] args) {
		
		Employee employee = new Employee(1,"anil");// whenever we create the object, constructor is called
	    employee.display();
	}
}
