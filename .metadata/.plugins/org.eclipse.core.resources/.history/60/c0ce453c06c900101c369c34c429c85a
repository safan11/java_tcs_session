package com.tcs.list.day4;

import java.util.ArrayList;

class Employee
{
	int id;
	String name;
	int age;
	
	Employee(int id,String name,int age)
	{
		this.id=id;
		this.name=name;
		this.age=age;
	}
}


public class ArrayListDemo3 {

	public static void main(String[] args) {

		ArrayList<Employee> employees = new ArrayList<Employee>();
		employees.add(new Employee(1, "sunil", 34));
		employees.add(new Employee(2, "ankit", 25));
		employees.add(new Employee(3, "mahesh", 36));
		
		
		// reterive all the employee
		for(Employee employee :employees)
		{
			System.out.println("id :"+ employee.id + " "+ employee.name + " "+ employee.age);
		}
		
		// find all the employee whose age is more than 30
		for(Employee employee :employees)
		{   
			if(employee.age>30)
			   System.out.println("id :"+ employee.id + " "+ employee.name + " "+ employee.age);
		}
		
		
		
	}

}
