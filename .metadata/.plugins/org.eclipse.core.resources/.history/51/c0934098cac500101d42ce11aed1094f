package com.tcs.constructor.day2;

class Employee
{
	int id;  //global
	String name;
	
	
	 Employee(int id,String name)
	{
		 this.id=id;
		 this.name=name;
		System.out.println("employee constrcutor called");
	}
	 
	 public Employee() {
		// TODO Auto-generated constructor stub
	}
	
	void display()
	{
		System.out.println("this is display function");
		System.out.println("id :"+ id);
		System.out.println("name :"+ name);
	}
}



public class DefaultConstructor1 {

	public static void main(String[] args) {
		
		Employee employee = new Employee(1,"anil");// whenever we create the object, constructor is called
	    employee.display();
	    
	    Employee employee2 = new Employee();
	}
}
